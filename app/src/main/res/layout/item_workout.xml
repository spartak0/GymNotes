<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <!-- Текстовая часть -->
    <TextView
        android:id="@+id/textWorkoutType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Тип тренировки"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textWorkoutDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Продолжительность"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textWorkoutDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Дата тренировки"
        android:textSize="14sp" />

    <!-- Кнопки -->
    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Редактировать"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Удалить"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonViewExercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Упражнения"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white" />
</LinearLayout>

